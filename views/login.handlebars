<!-- LOG IN FORM -->
<form id="login-form">
    <div class="post-header">
        <h2>Login</h2>
    </div>
    <div class="post-content">
        <div>
            <label for="username-login">Username</label>
            <input type="text" id="username-login" placeholder="username">
            <label for="password-login">Password</label>
            <input type="password" id="password-login" placeholder="password">
        </div>
        <button class="btn-generic" type="submit">Login!</button>
        <a class="login-link" href="/signup">Sign up</a>
    </div>
</form>
<script src="/js/login.js"></script>